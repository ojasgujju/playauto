{
  "manifest_version": 3,
  "name": "PlayAuto",
  "version": "1.0",
  "description": "Automation recorder for web interactions",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content.js"]
  }]
}
